{
  "name": "nextjs-boilerplate",
  "version": "0.1.0",
  "packageManager": "pnpm@8.11.0",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format": "next lint --fix && prettier --write \"**/*.{css,js,json,ts,tsx}\"",
    "test": "jest",
    "check-types": "tsc --noEmit",
    "clean": "rm -rf node_modules **/node_modules"
